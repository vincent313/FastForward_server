<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Bean.Message" table="zhiyongtest.Message">
        <id name="messageId" type="java.lang.String">
            <column name="messageId"></column>
        </id>
        <property name="receiver" type="java.lang.String">
            <column name="receiver"></column>
        </property>
        <property name="time" type="java.lang.String">
            <column name="time"></column>
        </property>
        <property name="sender" type="java.lang.String">
            <column name="sender"></column>
        </property>
        <property name="content" type="java.lang.String">
            <column name="content"></column>
        </property>
        <property name="type" type="java.lang.String">
            <column name="type"></column>
        </property>

    </class>
</hibernate-mapping>